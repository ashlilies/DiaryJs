<h1 class="mb-3">My Work Journal</h1>

<a class="btn btn-primary" href="/clockIn">Clock In</a>
<a class="btn btn-primary" href="/clockOut">Clock Out</a>

<div class="mt-3 mb-3">
    <h5>Current work day info:</h5>
    {{#if svc.currentWorkDay}}
        <b>Start Time:</b> {{svc.currentWorkDay.startTime}}
        <form action="/updateNote" method="post">
            <label>Notes:</label>
            <input type="text" name="notesInput" value="{{svc.currentNote}}"/>
            <input type="submit" value="Update"/>
        </form>
    {{else}}
        <i>Not started yet.</i>
    {{/if}}
</div>

<table class="table mt-3">
    <tr>
        <th>ID</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Work Duration</th>
        <th>Notes</th>
    </tr>
    {{#each workdays}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{formatDate this.startTime}}</td>
            <td>{{formatDate this.endTime}}</td>
            <td>{{timeDuration this.startTime this.endTime}}</td>
            <td>{{this.note}}</td>
        </tr>
    {{/each}}
</table>